                                const tableRows = data.scores.map(row => {
                                    console.log(`${row.username} => ${row.score}`);
                                  return `<tr><td>${row.username}</td><td>${row.score}</td></tr>`;
                                }).join('');
                                const scoreboardTable = document.getElementById('scoreboard');
